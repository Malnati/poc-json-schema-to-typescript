import React from 'react';
import { 
    Create, 
    SimpleForm, 
    <%=Array.from(new Set(fields.map(field => field.component))).join(', ')%><% fields.forEach(field => {%><% if(field.name === 'id'){%>, ReferenceInput<%}%><%})%>
} from 'react-admin';

const <%= name %>Create: React.FC = () => (
    <Create>
        <SimpleForm>
            <% fields.forEach(field => { %>
            <% if (field.name === 'id') { %><ReferenceInput source="id" reference="apps" /><% } else { %><<%= field.component %> source="<%= field.name %>" /><% } %>
            <% }) %>
        </SimpleForm>
    </Create>
);

export default <%= name %>Create;